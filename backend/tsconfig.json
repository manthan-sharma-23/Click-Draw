{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"] // Ensure this points to your types folder
  },
  "include": ["./src/**/*.ts", "./src/types/index.d.ts"] // Adjust paths as needed
}
